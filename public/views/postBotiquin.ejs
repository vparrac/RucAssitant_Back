<%- layout('profiles') %>
      <!--laupardo: sería bueno que no dejara crear botiquines sin nombre-->
    <h1> Creación de un botiquín reglamentario</h1>
    <form action="/botiquin/crear" method="POST">      
        <div class="form-group">
        <label id="nombre"> Nombre                 
        </label>
        <input type="text" name="nombre" class="form-control" aria-label="Small" aria-describedby="inputG roup-sizing-sm">
      </div>
      
      <div class="form-group">
        <label id="gasas">
          <span>Gasas:</span>          
        </label>
        <input class="form-control" value="20" type="number" name="gasas" readonly>
      </div>
      <div class="form-group">
        <label id="esparadrapo4Metros">
          <span>Esparadrapo 4 metros:</span>          
        </label>
        <input class="form-control" value="1" type="number" name="esparadrapo4Metros" readonly>
      </div>
      <div class="form-group">
        <label id="bajaLenguas">
          <span>Baja lenguas:</span>          
        </label>
        <input class="form-control" value="20" type="number" name="bajaLenguas"  readonly>
      </div>
      <div class="form-group">
        <label id="guantesLatex">
          <span>Guantes de latex:</span>          
        </label>
        <input class="form-control" value="100" type="number" name="guantesLatex"  readonly>
      </div>
      <div class="form-group">
        <label id="vendaEl2x5">
          <span>Venda elástica 2 x 5:</span>          
        </label>
        <input class="form-control" value="1" type="number" name="vendaEl2x5"  readonly>
      </div>
      <div class="form-group">
        <label id="vendaEl3x5">
          <span>Venda elástica 3 x 5 yardas:</span>          
        </label>
        <input class="form-control" value="1" type="number" name="vendaEl3x5"  readonly>
      </div>
      <div class="form-group">
        <label id="vendaEl5x5">
          <span>Venda elástica 5 x 5 yardas:</span>          
        </label>
        <input class="form-control" value="1" type="number" name="vendaEl5x5"  readonly>
      </div>
      <div class="form-group">
        <label id="vendaAl3x5">
          <span>Venda algodon 3 x 5 yardas:</span>          
        </label>
        <input class="form-control" value="2" type="number" name="vendaAl3x5"  readonly>
      </div>
      <div class="form-group">
        <label id="yodopovidona120">
          <span>Yodopovidona 120 ml (Jabón quirúrgico):</span>          
        </label>
        <input class="form-control" value="1" type="number" name="yodopovidona120"  readonly>
      </div>
      <div class="form-group">
        <label id="solucionSal">
          <span>Solución salina 250 cc o 500 cc:</span>          
        </label>
        <input class="form-control" value="2" type="number" name="solucionSal"  readonly>
      </div>
      <div class="form-group">
        <label id="termometro">
          <span>Termómetro de mercurio o digital:</span>          
        </label>
        <input class="form-control" value="1" type="number" name="termometro"  readonly>
      </div>
      <div class="form-group">
        <label id="alcohol">
          <span>Alcohol antiséptico 275 ml:</span>          
        </label>
        <input class="form-control" value="1" type="number" name="alcohol"  readonly>
      </div>
      <div class="form-group">
      <button type="submit" class="btn btn-dark">Registrar botiquin</button>
    </div>
    </form>
  
